<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RiskReportActivity">

    <ImageView
        android:id="@+id/riskReportImage"
        android:layout_width="350dp"
        android:layout_height="196.88dp"
        android:layout_marginTop="30dp"
        android:contentDescription="Risk image provided by user"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/riskReportDescription"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:layout_marginTop="30dp"
        android:text="reportDescription"
        android:textSize="14sp"
        android:textColor="@color/primaryTextColor"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/riskReportImage" />

    <Button
        android:id="@+id/buttonConfirmReport"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:text="Confirmar"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/secondaryDarkColor"
        android:textColor="@color/secondaryTextColor"
        app:layout_constraintStart_toStartOf="@+id/riskReportDescription"
        app:layout_constraintTop_toBottomOf="@+id/riskReportDescription" />

    <Button
        android:id="@+id/buttonRejectReport"
        android:layout_width="130dp"
        android:layout_height="45dp"
        android:layout_marginTop="30dp"
        android:autoSizeMaxTextSize="14sp"
        android:autoSizeMinTextSize="6sp"
        android:autoSizeTextType="uniform"
        android:backgroundTint="@color/primaryDarkColor"
        android:textColor="@color/secondaryTextColor"
        android:text="Rechazar"
        app:layout_constraintEnd_toEndOf="@+id/riskReportDescription"
        app:layout_constraintTop_toBottomOf="@+id/riskReportDescription" />
</androidx.constraintlayout.widget.ConstraintLayout>